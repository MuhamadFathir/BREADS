<%- include('partials/header') %>
        <div class="card">
            <div class="card-header text-center">
                <h1>Change Avatar</h1>
            </div>
            <div class="card-body">
                <form method="post" action="" encType="multipart/form-data">
                    <div class="row mb-3">
                        <label for="avatar" class="col-sm-2 col-form-label">Avatar</label>
                        <div class="col-sm-10">
                            <input type="file" class="form-control" id="avatar" name="avatar"
                                required>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="preview-avatar" class="col-sm-2 col-form-label">Preview</label>
                        <div class="col-sm-10">
                            <img id="avatarPreview" src="/images/avatar/<%= user.avatar || 'profil.jpg'%>" alt="Avatar">
                        </div>
                    </div>
                    <div class="card-footer">

                        <button type="submit" value="Save" class="btn btn-primary"><i class="fa-solid fa-floppy-disk"></i></button>

                        <a href="/todos">
                            <button type="button" value="Cancle" class="btn btn-warning"><i class="fa-solid fa-rotate-right"></i></button>
                        </a>
                    </div>
                </form>
            </div>
        </div>
<%- include('partials/footer') %>